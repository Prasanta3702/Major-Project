<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp"
    android:paddingHorizontal="16dp">

    <ImageView
        android:id="@+id/model_material_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/background_menu_icon"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_material" />

    <TextView
        android:id="@+id/model_material_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Subject name"
        android:textSize="16sp"
        style="@style/TextTheme"
        app:layout_constraintBottom_toBottomOf="@+id/model_material_icon"
        app:layout_constraintStart_toEndOf="@+id/model_material_icon"
        app:layout_constraintTop_toTopOf="@+id/model_material_icon" />

    <TextView
        android:id="@+id/model_material_desc"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        style="@style/TextTheme"
        android:text="Lorem ipsum dolor sit amet consectetur adipisicing elit. Fugiat esse delectus dolore libero sed animi aut cumque error molestiae enim, optio quasi!"
        app:layout_constraintEnd_toStartOf="@+id/model_material_content_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/model_material_icon" />

    <ImageView
        android:id="@+id/model_material_content_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/model_material_desc"
        app:srcCompat="@drawable/icon_pdf" />

    <TextView
        android:id="@+id/model_material_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="20 Jul 2024"
        android:alpha="0.7"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/model_material_content_image"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>