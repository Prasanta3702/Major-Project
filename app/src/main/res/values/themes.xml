<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BrainAce" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="BackTheme">
        <item name="android:background">@color/dayBackColor</item>
    </style>

    <style name="MenuLayoutTheme">
        <item name="android:background">@drawable/shape_menu_layout</item>
    </style>

    <style name="CardTheme">
        <item name="android:background">@color/cardDayColor</item>
    </style>

    <style name="TextTheme">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DividerTheme">
        <item name="android:background">@color/dividerDayColor</item>
    </style>

    <style name="ImageButtonTheme">
        <item name="tint">@color/black</item>
    </style>

</resources>